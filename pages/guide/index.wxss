/* pages/guide/index.wxss */
page {
  background-color: #f6f6f6;
}
.root {
  padding: 27px 16px;
}

.list-item{
  display: flex;
  width: 100%;
  justify-content: center;
  margin-bottom: 12px; 
}

.list-item-header {
  border-radius: 6px;
  width: 100px;
  background-color: #67c3f9;
  text-align: center;
  color:#fff;
}

.list-item-header-name {
	font-family: PingFangSC-Regular;
	font-size: 16px;
  line-height: 24px;
  padding:5px 10px;
}

.over-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.over-label {
  margin-bottom: 32px;
  font-family: PingFangSC-Regular;
	font-size: 16px;
	line-height: 24px;
	color: #fff;
}

.over-image {
  width: 260px;
  height: 260px;
  border-radius: 50%;
}